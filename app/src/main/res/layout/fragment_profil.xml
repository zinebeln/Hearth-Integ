<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ImageView pour l'image de fond -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/backcard"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:background="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

    <ImageView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/titre"
        />



    <!-- Titre en haut -->
<!--    <TextView-->
<!--        android:id="@+id/textTitle"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Profil"-->
<!--        android:textSize="24sp"-->
<!--        android:gravity="center"-->
<!--        android:padding="16dp"-->
<!--        android:textColor="@android:color/black"-->
<!--        android:background="@android:color/darker_gray"/>-->

    <!-- Image avec champ texte pour l'identifiant -->
    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/titre"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="140dp"
        android:src="@drawable/ic_profil"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/textUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:textColor="@color/white"
        android:text="Identifiant"
        android:textSize="24sp" />

    <!-- Boutons pour supprimer le compte et changer le mot de passe -->
    <Button
        android:id="@+id/btnDeleteAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textUsername"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:text="Supprimer le compte"
        android:onClick="@{() -> profilViewModel.deleteAccount(user)}" />

    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnDeleteAccount"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"

        android:text="Changer le mot de passe" />

        <Button
            android:id="@+id/btnDeconnexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnDeleteAccount"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"

            android:text="Deconnexion" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationProfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"
        app:itemIconTint="@color/bottom_navigation_colors"
        app:itemTextColor="@color/bottom_navigation_colors"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_card" />
</RelativeLayout>